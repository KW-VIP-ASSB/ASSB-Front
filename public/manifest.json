{
  "manifest_version": 3,
  "name": "My Sidebar Extension",
  "version": "1.0",

  "permissions": ["activeTab", "scripting", "sidePanel"],

  "action": {
    "default_title": "Open Sidebar"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  }
}
